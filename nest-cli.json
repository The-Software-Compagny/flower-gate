{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "views/**/*.hbs",
      "config/**/*",
      {
        "include": "assets/**/*",
        "watchAssets": true
      },
      {
        "include": "_i18n/**/*",
        "watchAssets": true
      }
    ],
    "builder": "swc",
    "typeCheck": true,
    "watchAssets": true
  }
}