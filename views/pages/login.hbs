<div class="grid  md:grid-cols-2 grid-cols-1  bg-base-100/[.9] rounded-xl">
  {{> parts/login }}

  <div class="py-24 px-10">
    <h2 class="text-2xl font-semibold mb-2 text-center">Login</h2>
    <form action="/interaction/{{ uid }}" method="POST" autocomplete="off">

      <div class="mb-4">
        <div class="form-control w-full mt-4">
          <label class="label">
            <span class="label-text text-base-content">Identifiant</span>
          </label>
          <input type="text" class="input input-bordered w-full" name="username" id="username" />
        </div>

        <div class="form-control w-full mt-4">
          <label class="label">
            <span class="label-text text-base-content">Mot de passe</span>
          </label>
          <input type="password" class="input input-bordered w-full" name="password" id="password" />
        </div>
      </div>

      <div class='text-right text-primary'>
        <Link to="/forgot-password"><span
          class="text-sm inline-block hover:text-primary hover:underline hover:cursor-pointer transition duration-200">Forgot
          Password?</span></Link>
      </div>

      <button type="submit" class="btn mt-2 w-full btn-primary">Login</button>

      <div class='text-center mt-4'>Don't have an account yet?
        <a href="/register"><span
            class="inline-block hover:text-primary hover:underline hover:cursor-pointer transition duration-200">Register</span>
        </a>
      </div>
    </form>
  </div>
</div>